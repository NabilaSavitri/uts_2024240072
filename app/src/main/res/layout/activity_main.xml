<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_judulM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORMULIR PENDAFTARAn"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/et_namaM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_judulM"/>

    <EditText
        android:id="@+id/et_nomorM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Pendaftaran"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/et_namaM"/>

    <Spinner
        android:id="@+id/sp_jalurM"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nomorM"
        android:entries="@array/arr_jalur"/>

    <CheckBox
        android:id="@+id/cb_konfirmasiM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_jalurM"
        android:layout_marginTop="15dp"
        android:text="Konfirmasi Daftar" />

    <Button
        android:id="@+id/btn_daftarM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_konfirmasiM"
        android:text="Daftar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>